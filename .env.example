# Django Settings
# ВАЖНО: Скопируйте этот файл в .env и заполните значения
# Команда: cp .env.example .env

# Секретный ключ Django (ОБЯЗАТЕЛЬНО измените в продакшене!)
# Для генерации: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-fallback-key-for-development-only-change-in-production

# Режим отладки (False для продакшена)
DEBUG=True

# Разрешенные хосты (через запятую, без пробелов)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings (опционально, только если используется CORS)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
